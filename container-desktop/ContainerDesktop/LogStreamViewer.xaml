<Window x:Class="ContainerDesktop.LogStreamViewer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ContainerDesktop"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        xmlns:avalonEdit="http://icsharpcode.net/sharpdevelop/avalonedit"
        mc:Ignorable="d"
        ui:WindowHelper.UseModernWindowStyle="True"
        Title="Log Stream Viewer" Height="450" Width="800">
    <Window.Resources>
        <FontFamily x:Key="CascadiaCodePL">pack://application:,,,/Fonts/#Cascadia Code PL</FontFamily>
    </Window.Resources>
    <Grid>
        <avalonEdit:TextEditor x:Name="editor" IsReadOnly="True" ShowLineNumbers="True" FontFamily="{StaticResource CascadiaCodePL}" >

        </avalonEdit:TextEditor>
    </Grid>
</Window>
