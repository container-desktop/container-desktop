<cmn:ApplicationWithContext x:Class="ContainerDesktop.Installer.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:ContainerDesktop.Installer"
             xmlns:cmn="http://container-desktop.io/common"
             xmlns:ui="http://schemas.modernwpf.com/2019"
             Startup="AppStartup" Exit="AppExit">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ui:ThemeResources />
                <ui:XamlControlsResources />
                <!-- Other merged dictionaries here -->
            </ResourceDictionary.MergedDictionaries>
            <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        </ResourceDictionary>
    </Application.Resources>
</cmn:ApplicationWithContext>
